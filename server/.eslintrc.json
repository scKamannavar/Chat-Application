{
  "extends": "airbnb-base",
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "brace-style": [
      "error",
      "stroustrup"
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "linebreak-style": [
      0,
      "windows"
    ],
    "no-return-assign": [
      2,
      "except-parens"
    ],
    "no-var": "error",
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "no-unused-vars": [
      "error",
      {
        "args": "none"
      }
    ],
    "max-len": [
      "error",
      {
        "code": 200
      }
    ],
    "no-use-before-define": [
      "error",
      {
        "variables": false
      }
    ],
    "no-unused-expressions": [
      "error",
      {
        "allowTernary": true
      }
    ],
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ]
  }
}